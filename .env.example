# Example .env file for Jira Automation App

# Jira API base URL
JIRA_URL=https://your-jira-instance.atlassian.net

# Jira API authentication
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-api-token

# Jira project configuration
JIRA_PROJECT_KEY=your-project-key
DEFAULT_ASSIGNED_USER_LAPSED=user-id:unique-identifier
DEFAULT_ASSIGNED_USER_NEW_WEB_ORDER=user-id:unique-identifier

# Google Sheets configuration
GOOGLE_SHEETS_CREDENTIALS_FILE=path-to-credentials.json

# SMTP configuration
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
EMAIL_SENDER=your-email@example.com
EMAIL_PASSWORD=your-email-token (format in xxxx xxxx xxxx xxxx)

# Application settings
CALLS_BEFORE_BREAK=20
PAUSE_DURATION=60

# Django settings
DJANGO_ALLOWED_HOSTS=your-domain.com,localhost,127.0.0.1
SECRET_KEY=your-secret-key
STATIC_ROOT=path-to-static-files
DEBUG=True

# Replace example values with actual credentials or settings
# Renane file to .env before using in production and .env.dev for development
# Make sure to keep this file secure and do not share it publicly